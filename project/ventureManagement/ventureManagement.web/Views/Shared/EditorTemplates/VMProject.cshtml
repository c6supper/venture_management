@model VentureManagement.Models.VMProject

@{
    var title = ViewData.ContainsKey("title") ? ViewData["title"].ToString() : "";
    var itemId = ViewData.ContainsKey("itemId") ? ViewData["itemId"].ToString() : "";
    var detail = ViewData.ContainsKey("detail");
    var url = ViewData.ContainsKey("url") ? ViewData["url"].ToString() : "";
}

@(
 Html.X().FormPanel()
        .ItemID(itemId)
        .Title(title)
        .Collapsible(!detail)
        .Collapsed(!detail)
        .Url(url)
        .DefaultAnchor("100%")
        .StyleSpec("margin-bottom:5px;")
        .Frame(true)
        .Items(
            Html.X().HiddenFor(p=>p.ProjectId),
            Html.X().TextFieldFor(p=>p.ProjectName).ReadOnly(true),
            Html.X().TextFieldFor(p=>p.ProjectLocation).ReadOnly(true),
            Html.X().TextFieldFor(p=>p.ProjectStatus).ReadOnly(true),
            Html.X().DateFieldFor(p=>p.ProjectStartTime).ReadOnly(true)
        )
      )

@Html.EditorFor(t=>t.Organization, new {itemId = "OrganizationId", title = "施工单位信息"})
@Html.EditorFor(t=>t.User, new {itemId = "ThreatCaseOwnerId", title = "施工负责人"})
