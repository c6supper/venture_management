@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="@Url.Content("~/resources/css/main.css")" />

    <script>
        Ext.onReady(function () {
            if (top !== self) {
                Ext.select("a").on("click", function (e, el) { parent.location = el.href; }, null, { preventDefault : true });
            }
        });
    </script>
</head>
<body>
    @Html.X().ResourceManager()

    @helper Links13()
    {
        <p><span>1</span><a href="/#/Getting_Started/Introduction/Overview/">Getting Started</a></p>
        <p><span>2</span><a href="/#/Events/DirectEvents/Overview/">DirectEvents</a></p>
        <p><span>3</span><a href="/#/Events/DirectMethods/Overview/">DirectMethods</a></p>                                                    
    }

    @helper Links46()
    {
        <p><span>4</span><a href="/#/GridPanel/ArrayGrid/ArrayWithPaging/">GridPanel</a></p>
        <p><span>5</span><a href="/#/ViewPort/Basic/Built_in_Markup/">ViewPort</a></p>
        <p><span>6</span><a href="/#/XRender/Basic/Add_Items/">XRender</a></p>                                                    
    }

    @(
        Html.X().Viewport()
           .Cls("welcome")
           .Layout(LayoutType.VBox)
           .Items(items => {
               items.Add(Html.X().Container()
                   .Height(165)
                   .Content(
                        @<text>
                        <div id="welcome-title">
                            Build <span class="mvc">ASP.NET MVC</span> Applications<br> With Ease
                        </div>
                        </text>
                   )
               );

               items.Add(Html.X().Container().Content(
                    @<text>
                      <div id="welcome-info">
                      <span>
                        <p><span class="f-icon-ok-circle f-icons-standout"></span> Full support for ASP.NET MVC, including the Razor View Engine.</p>
                      </span>
                    </div>
                    </text>
               ));

               items.Add(Html.X().Container().Content(
                    @<text>
                        <div id="welcome-grid">
  		                    <div id="screens">
                          </div>
                            <a class="button" href="/#/Events/DirectMethod/"><span class="f-icon-cog"></span> Events</a>
  			                    <a class="button" href="/#/Portal/Complex/"><span class="f-icon-cog"></span> Portal</a>
                            <a class="button" href="/#/Models/FormPanelFor/"><span class="f-icon-cog"></span> Models</a>               
	                    </div>
                    </text>
               ));
               
           })
     )
</body>
</html>
