@using System.Activities.Statements
@using VentureManagement.Models
@{
    ViewBag.Title = "权限管理";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section headtag
{
    <script>
        var addRecord = function (grid) {
            var r = Ext.create({
                RoleName: "角色名"
            });
            grid.store.insert(0, r);
            form.getForm().reset();
        };
    </script>

}

@section menu
{
    @(
        X.GridPanel()
            .Title("权限列表")
            .ID("PermissionGrid")
            .Frame(true)
            .Height(400)
            .TopBar(
                Html.X().Toolbar()
                    .Items(
                        Html.X().Button()
                            .Text("保存")
                            .Icon(Icon.Disk)
                            .DirectEvents(de =>
                            {
                                de.Click.Url = Url.Action("UpdatePermissions");
                                de.Click.ExtraParams.Add(new Parameter
                                {
                                    Name = "data",
                                    Value = "this.up('grid').store.getChangedData()",
                                    Mode = ParameterMode.Raw,
                                    Encode = true
                                });
                            }),
                            
                        Html.X().Button()
                            .Text("增加")
                            .Icon(Icon.UserAdd)
                            .Handler("addRecord(App.PermissionGrid);"),
                            
                        Html.X().Button()
                            .Text("删除")
                            .Icon(Icon.UserAdd)
                            .Handler("this.up('grid').deleteSelected(); App.UserForm.getForm().reset();")
                        )
                    )
            .Store(
                    Html.X().Store()
                    .PageSize(10)
                    .DataSource(Model)
                    .Model(
                        Html.X().Model()
                        .Fields(
                            new ModelField("RoleId",ModelFieldType.Int),
                            new ModelField("RoleName",ModelFieldType.String),
                            new ModelField(Role.PerimissionStrings[0], ModelFieldType.Boolean),
                            new ModelField(Role.PerimissionStrings[1], ModelFieldType.Boolean),
                            new ModelField(Role.PerimissionStrings[2], ModelFieldType.Boolean),
                            new ModelField(Role.PerimissionStrings[3], ModelFieldType.Boolean),
                            new ModelField(Role.PerimissionStrings[4], ModelFieldType.Boolean),
                            new ModelField(Role.PerimissionStrings[5], ModelFieldType.Boolean)
                        )
                    )
                    .ServerProxy(
                        Html.X().AjaxProxy()
                            .Url(Url.Action("GetData"))
                    )                                       
                )
                    
            .ColumnModel(
                Html.X().Column().Text("Id").DataIndex("RoleId"),
                Html.X().ComponentColumn().Text("角色名").DataIndex("RoleName").EmptyCellText("不能为空")
                    .OverOnly(true).Editor(true).Component(Html.X().TextField()
                    .AllowBlank(false).EmptyText("角色名最少两个字")),
                Html.X().CheckColumn().Text(Role.PerimissionStrings[0]).DataIndex(Role.PerimissionStrings[0]).Editable(true),
                Html.X().CheckColumn().Text(Role.PerimissionStrings[1]).DataIndex(Role.PerimissionStrings[1]).Editable(true),
                Html.X().CheckColumn().Text(Role.PerimissionStrings[2]).DataIndex(Role.PerimissionStrings[2]).Editable(true),
                Html.X().CheckColumn().Text(Role.PerimissionStrings[3]).DataIndex(Role.PerimissionStrings[3]).Editable(true),
                Html.X().CheckColumn().Text(Role.PerimissionStrings[4]).DataIndex(Role.PerimissionStrings[4]).Editable(true),
                Html.X().CheckColumn().Text(Role.PerimissionStrings[5]).DataIndex(Role.PerimissionStrings[5]).Editable(true)
            )
            .View(Html.X().GridView().StripeRows(true))   
            .BottomBar(
                Html.X().PagingToolbar()
                    .BeforePageText("页")
                    .AfterPageText("第{0}页")
                    .DisplayInfo(true)
                    .DisplayMsg("显示角色 {0} - {1} 共 {2}")
                    .EmptyMsg("没有数据"))
            )
}
