@using Ext.Net
@using Ext.Net.MVC
@using VentureManagement.Models
@model VentureManagement.Models.ThreatCase
@{
    ViewBag.Title = "隐患详细信息";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section headtag
{
    <script>
        
    </script>
}

@section menu
{
    @(
        X.Panel()
            .Layout(LayoutType.Column)
            .Items(
                Html.X().FormPanel()
                    .ID("ThreatCaseDetail")
                    .Frame(true)
                    .Title("详细信息")
                    .ColumnWidth(0.5)
                    .DefaultAnchor("100%")
                    .FieldDefaults(fd => {
                        fd.LabelAlign = LabelAlign.Right;
                    })
                    .ItemsFrom(b => Html.EditorForModel("ThreatCase",new {readOnly = string.Empty}))
                    .Buttons(
                        X.Button()
                            .Text("打印告警预知单")
                            .Icon(Icon.Printer)
                            .Handler("document.location.href='/Threat/ThreatCasePrinter/Index?threatCaseId=" + Model.ThreatCaseId + "';")
                            ),
                    X.Image()
                        .ImageUrl("../../resources/images/threat/"+ ThreatCase.ConvertDisplay2Value(Model.ThreatCaseStatus) + ".png")
                        .ColumnWidth(0.25)
                        .StyleSpec("margin-left: 120px;margin-top: 20px;")
                    )
    )
}