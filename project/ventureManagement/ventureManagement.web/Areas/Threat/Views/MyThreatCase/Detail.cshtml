@using Ext.Net
@using Ext.Net.MVC
@model VentureManagement.Models.ThreatCase
@{
    ViewBag.Title = "隐患详细信息";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section headtag
{
    <script>
        
    </script>
}

@section menu
{
    @(
        Html.X().FormPanel()
            .ID("ThreatCaseDetail")
            .Frame(true)
            .Title("详细信息")
            .Width(500)
            .Url(Url.Action("Submit"))
            .DefaultAnchor("100%")
            .FieldDefaults(d => {
                                    d.LabelAlign = LabelAlign.Right;
            })
            .Buttons(
                X.Button()
                    .Text("确认")
                    .Icon(Icon.Disk)
                    .Handler("App.ThreatCaseDetail.submit();")
            )
            .ItemsFrom(b => Html.DisplayForModel("ThreatCase"))
    )
}